<%- include("../includes/base.ejs") %>
<link rel="stylesheet" href="/css/auth/auth.css" />
<%- include("../includes/header.ejs") %>
<main class="flex justify-center items-center flex-col h-full">
  <div id="msgElm"></div>
    <form id="registerForm" action="/auth/signup" method="post" class="flex-col flex justify-center items-center bg-slate-300 p-4 rounded-lg">
        <h1 class="text-3xl text-center">Register</h1>
        <div class=" form-group flex justify-center flex-col items-center">
          <input type="text" name="username" placeholder="username" class="input-form" value=<%-oldValue.username%>/>
          <i class="msg-error"></i>
        </div>
        <div class=" form-group flex justify-center flex-col items-center">
          <input type="email" name="email" placeholder="email" class="input-form" value=<%-oldValue.email%>/>
          <i class="msg-error"></i>
        </div>
        <div class=" form-group flex justify-center flex-col items-center">
          <input id="password" type="password" name="password" placeholder="password" class="input-form" value=<%-oldValue.password%>/>
          <i class="msg-error"></i>
        </div>
        <div class=" form-group flex justify-center flex-col items-center">
          <input id="ConfPassword" type="password" name="passwordConf" placeholder="Confirm Password" class="input-form"  value=<%-oldValue.passwordConf%>/>
          <i class="msg-error"></i>
        </div>
        <button type="submit" class="w-52 h-12 bg-[#41b9ff]">signup</button>
        <p class="text-xl text-[#4ab4fa]">
          Already have an account?<a href="/auth/login">Login here</a>
        </p>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </form>
  </main>
  <%- include("../includes/end.ejs") %>
