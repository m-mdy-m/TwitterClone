<%- include("../includes/base.ejs") %>
<link rel="stylesheet" href="/css/auth/login.css" />
<%- include("../includes/header.ejs") %>
<div id="msgElm"></div>
<div class="flex justify-center items-center flex-col h-full">
    <form id="registerForm" action="/login" method="post" class="flex-col flex justify-center items-center bg-slate-300 p-4 rounded-lg">
        <h1 class="text-3xl text-center">login</h1>
        <div class=" form-group flex justify-center flex-col items-center">
          <input type="text" name="username" placeholder="username" class="input-form" value=<%-oldValue.username%>/>
          <i class="msg-error"></i>
        </div>
        <div class=" form-group flex justify-center flex-col items-center">
          <input type="email" name="email" placeholder="email" class="input-form" value=<%-oldValue.email%>/>
          <i class="msg-error"></i>
        </div>
        <div class=" form-group flex justify-center flex-col items-center">
          <input id="password" type="password" name="password" placeholder="password" class="input-form" value=<%-oldValue.password%>/>
          <i class="msg-error"></i>
        </div>
        <button type="submit" class="w-52 h-12 bg-[#41b9ff]">login</button>
        <p class="text-xl text-[#4ab4fa]">
          Need an account? <a href="/signup">register here</a>
        </p>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </form>
  </div>
  <script src="/js/auth/login.js" type="module"></script>
<%- include("../includes/end.ejs") %>
