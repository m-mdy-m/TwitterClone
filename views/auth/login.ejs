<%- include("../includes/base.ejs") %>
<link rel="stylesheet" href="/css/auth/login.css" />
<%- include("../includes/header.ejs") %>
<div class="flex justify-center items-center flex-col h-full">
    <form action="/login" method="post" class="flex-col flex justify-center items-center bg-slate-300 p-4 rounded-lg">
        <h1 class="text-3xl text-center">login</h1>
        <input type="text" name="logUsername" placeholder="username" class="input-form"/>
        <input type="password" name="logPassword" placeholder="password" class="input-form"/>
        <input type="email" name="logEmail" placeholder="email" class="input-form"/>
        <button type="submit" class="w-52 h-12 bg-[#41b9ff]">login</button>
        <p class="text-xl text-[#4ab4fa]">
          Need an account? <a href="/signup">register here</a>
        </p>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </form>
  </div>
<%- include("../includes/end.ejs") %>
