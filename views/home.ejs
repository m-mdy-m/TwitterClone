<%- include("includes/base.ejs") %> <%- include("includes/header.ejs") %>
<!-- BOX HOME -->
<div class="grid grid-rows-home ">
  <%- include('includes/home/section-stories.ejs',{src : '/assets/icon/nav/user.svg',UsernameStory:'m__mdy__m'}) %>
  <!-- Wrapper Posts -->
  <div class="pt-5 px-12">
    <!-- Post Box -->
    <div class="grid grid-rows-tweet h-32 rounded-2xl px-4 py-2 bg-[#111010]">
      <!-- up tweet section -->
      <div class="w-full h-full grid grid-cols-tweet">
        <!-- User Profile -->
        <div class="flex flex-col justify-center items-center">
          <div class="bg-gradient-to-tr from-[#222224] to-[#262629] rounded-full flex justify-center items-center border border-[#403e42] shadow-lg  cursor-pointer duration-100 transition-all hover:scale-105 ">
              <img src="/assets/images/profilePic.png" alt="" class="profilePic w-12 h-12">
          </div>
        </div>
        <!-- Tweet section -->
        <div class="flex justify-center items-center">
          <input type="text" placeholder="What's happening?" class="w-full bg-[#161617] px-1 py-2 border border-[#343435] text-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
        </div>
      </div>
      <!-- Bottom tweet section -->
      <div class="w-full h-full flex justify-between items-center">
        <!-- Wrapper Icons  -->
        <div class="flex justify-start items-center [&>*]:cursor-pointer px-4">
        <!-- Tweet icons with hover animation -->
          <div class="mr-4 icon-container  transform transition duration-150 hover:scale-110">
            <img src="/assets/icon/twwets/circle.svg" alt="">
          </div>
          <div class="mr-4 icon-container  transform transition duration-150 hover:scale-110">
            <img src="/assets/icon/twwets/filter.svg" alt="">
          </div>
          <div class="mr-4 icon-container transform transition duration-150 hover:scale-110">
            <img src="/assets/icon/twwets/calendar.svg" alt="">
          </div>
          <div class="mr-4 icon-container  transform transition duration-150 hover:scale-110">
            <img src="/assets/icon/twwets/location.svg" alt="">
          </div>
          <div class=" icon-container transform transition duration-150 hover:scale-110">
            <img src="/assets/icon/twwets/information.svg" alt="">
          </div>
        </div>
        <!-- Wrapper Button Tweet -->
        <div class="flex justify-center items-center">
          <button class="px-3 py-1 rounded-lg text-white font-Aktiv__light  bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 transition-colors duration-300 ease-in-out transform hover:scale-105shadow-md focus:outline-none">
            Tweet
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Wrapper Directs -->
<div class="border-l border-[#28282a]"></div>
<%- include("includes/end.ejs") %>
